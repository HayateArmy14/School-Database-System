<div class="col-6">
  <div class="form-floating mb-3">
    <input
      type="text"
      class="form-control"
      id="floatingInput"
      placeholder="First Name"
      name="first_name"
      value="{{this.first_name}}"
    />
    <label for="floatingInput">Όνομα</label>
  </div>
</div>
<div class="col-6">
  <div class="form-floating mb-3">
    <input
      type="text"
      class="form-control"
      id="floatingInput"
      placeholder="Last Name"
      name="last_name"
      value="{{this.last_name}}"
    />
    <label for="floatingInput">Επίθετο</label>
  </div>
</div>

<div class="col-6">
  <div class="form-floating mb-3">
    <input
      type="text"
      class="form-control"
      id="floatingInput"
      placeholder="Phone"
      name="phone"
      value="{{this.phone}}"
    />
    <label for="floatingInput">Κινητό</label>
  </div>
</div>
<div class="col-6">
  <div class="form-floating mb-3">
    <input
      type="text"
      class="form-control"
      id="floatingInput"
      placeholder="parent phone"
      name="parent_phone"
      value="{{this.parent_phone}}"
    />
    <label for="floatingInput">Τηλ. Οικογένειας</label>
  </div>
</div>
<div class="col-6">
  <div class="form-floating mb-3">
    <input
      type="text"
      class="form-control"
      id="floatingInput"
      placeholder="payment_status"
      name="payment_status"
      value="{{this.payment_status}}"
    />
    <label for="floatingInput">Πληρωμή</label>
  </div>
</div>

<div class="col-6">
  <div class="form-floating mb-3">
    <input
      type="text"
      class="form-control"
      id="floatingInput"
      placeholder="class_id"
      name="class_id"
      value="{{this.class_id}}"
    />
    <label for="floatingInput">Τμήμα</label>
  </div>
</div>

<div class="form-floating">
  <select
    class="form-select"
    id="floatingSelect"
    aria-label="Floating label select example"
    name="class_id"
    value="{{this.class_id}}"
  >
    <option selected>Επιλέξτε Τμήμα</option>
    {{#each rows}}
      <option value="{{class.class_id}}">{{class.class_id}}</option>
    {{/each}}
    {{! <option value="1">One</option>
    <option value="2">Two</option>
    <option value="3">Three</option> }}
  </select>
  <label for="floatingSelect">Τμήμα</label>
</div>

<div class="col-12">
  <div class="form-floating mb-3">
    <textarea
      type="text"
      class="form-control"
      id="floatingInput"
      placeholder="Comments"
      id="comments"
      name="comments"
      style="height: 150px;"
    >{{this.comments}}</textarea>
    <label for="floatingInput">{{this.comments}}</label>
  </div>
</div>

<div class="col-12 d-grid">
  <button class="btn btn-primary" type="submit">
    Υποβολή
  </button>
</div>