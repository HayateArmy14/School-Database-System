{{#if removedStudent}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    Class Has Been Removed
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/if}}

<div class="row">
  <div class="col-6"><h1>Classes</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a
      href="/add-class"
      type="button"
      class="btn btn-primary align-self-center"
    >+ Add Class</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Τμήμα</th>
      <th scope="col">Μάθημα</th>
       <th scope="col" class="text-center">Επιλογές</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
      <tr>
        <th scope="row">{{this.class_id}}</th>
        <td>{{this.class_name}}</td>
        <td>{{this.class_cat}}</td>
       
        </td>
        <td class="d-flex justify-content-center">
          <a
            href="/view-class/{{this.class_id}}"
            type="button"
            class="btn btn-light btn-small"
          ><i class="bi bi-eye"></i>
            Μαθητές</a>
          <a
            href="/edit-class/{{this.class_id}}"
            type="button"
            class="btn btn-light btn-small"
          ><i class="bi bi-pencil"></i>
            Edit</a>
          <a
            href="/classes/{{this.class_id}}"
            type="button"
            class="btn btn-light btn-small"
          ><i class="bi bi-person-x"></i>
            Delete</a>
        </td>
      </tr>
    {{/each}}

  </tbody>
</table>